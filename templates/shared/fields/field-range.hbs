{{!-- Range --}}
<div class="form-group split-group">
    <label>{{ localize "ME5E.Range" }}</label>
    <div class="form-fields">

        {{!-- Value --}}
        {{#if range.scalar}}
        {{ formField fields.value value=data.value label="ME5E.Value" localize=true hint=false classes="label-top"
                     rootId=partId }}
        {{/if}}

        {{!-- Units --}}
        {{ formField fields.units value=data.units label="ME5E.Unit" localize=true hint=false localize=true
                     options=rangeTypes classes="label-top" rootId=partId }}
    </div>

    {{!-- Condition --}}
    {{ formInput fields.special value=data.special input=inputs.createTextInput localize=true classes="full-width"
                 placeholder=(localize "ME5E.RANGE.FIELDS.range.special.label") rootId=partId }}
</div>
