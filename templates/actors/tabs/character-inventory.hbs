<section class="tab {{ tab.cssClass }}" data-tab="{{ tab.id }}" data-group="{{ tab.group }}">

    {{!-- Encumbrance & Containers --}}
    <div class="top">

        {{!-- Encumbrance --}}
        <div class="encumbrance card">
            {{> "systems/me5e/templates/inventory/encumbrance.hbs" encumbrance=system.attributes.encumbrance
                hasBreakpoints=true }}
            <div class="info">
                <div class="strength">
                    <span class="label">{{ localize "ME5E.Ability.Str.Label" }}</span>
                    <span class="value">{{ system.abilities.str.value }}</span>
                </div>
                <div class="size">
                    <span class="label">{{ localize "ME5E.Size" }}</span>
                    <span class="value" aria-label="{{ size.label }}">{{ size.abbr }}</span>
                </div>
                <div class="multiplier">
                    <span class="label">{{ localize "ME5E.Multiplier" }}</span>
                    <span class="value">
                        <span class="sign">&times;</span>
                        {{ size.mod }}
                    </span>
                </div>
            </div>
        </div>

        {{!-- Containers --}}
        {{> "systems/me5e/templates/inventory/containers.hbs" }}

    </div>

    {{> "systems/me5e/templates/inventory/inventory.hbs" }}
</section>
